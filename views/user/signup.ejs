                  </div>
                  <div class="form-group">
                    <input
                      type="email"
                      required=""
                      name="email"
                      placeholder="Email"
                    />
                  </div>
                      <p id="phone-error" style="color: red;"></p>
                     
                  <div class="form-group" >
                    <input required pattern="[0-9]{10}" title="Please enter a 10 digit phone number"
                    id="mobile"
                      type="text"
                      required=""
                      name="phonenumber"
                      placeholder="Phone Number"
                    />
